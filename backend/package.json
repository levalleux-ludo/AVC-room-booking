{
    "name": "avc-room-booking-backend",
    "version": "1.0.0",
    "description": "",
    "main": "server.js",
    "scripts": {
        "test": "set \"MONGODB_URI=mongodb://localhost/AVC-room-booking-system-test\" && nodemon --exec \"mocha --timeout 5s -R min \"",
        "test-single": "mocha $1",
        "start": "set NODE_ENV=dev&& node ./server.js",
        "start-dev": "set NODE_ENV=dev&& nodemon ./server.js",
        "start:env-now": "node  --require dotenv/config ./server.js dotenv_config_path=./env/.env.now",
        "start:env-prod": "node  --require dotenv/config ./server.js dotenv_config_path=./env/.env.prod",
        "start:env-preprod": "node  --require dotenv/config ./server.js dotenv_config_path=./env/.env.preprod",
        "test-debug": "MONGODB_URI='mongodb://localhost/AVC-room-booking-system-test' mocha --inspect-brk",
        "deploy:now": "now -n avc-room-booking",
        "build": "npm build",
        "docker:build": "docker build --rm -f Dockerfile -t local/avc/backend:latest .",
        "docker:create-network": "docker network create -d bridge --subnet 10.0.75.0/24 --gateway 10.0.75.1 avcnet",
        "docker:run": "docker run -p 4000:4000 --env MONGODB_URI=mongodb://host.docker.internal/AVC-room-booking-system local/avc/backend",
        "docker:aws:renew-token": "aws ecr get-login --no-include-email>%TEMP%\\aws-token && cmd /C<%TEMP%\\aws-token & del /Q /F %TEMP%\\aws-token",
        "docker:aws:push": "docker tag local/avc/backend:latest 486699961018.dkr.ecr.eu-west-2.amazonaws.com/avc-backend:latest && docker push 486699961018.dkr.ecr.eu-west-2.amazonaws.com/avc-backend:latest"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "aws-sdk": "^2.585.0",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-jwt": "^5.3.1",
        "fs": "0.0.1-security",
        "fs-extra": "^8.1.0",
        "moment": "^2.24.0",
        "mongoose": "^5.6.11",
        "multer": "^1.4.2",
        "rootpath": "^0.1.2"
    },
    "devDependencies": {
        "app-module-path": "^2.2.0",
        "chai": "^4.2.0",
        "chai-fs": "^2.0.0",
        "chai-http": "^4.3.0",
        "form-data": "^3.0.0",
        "mocha": "^6.2.0",
        "nodemon": "^1.19.1"
    }
}
