{
    "name": "avc-room-booking-backend",
    "version": "1.0.0",
    "description": "",
    "main": "server.js",
    "scripts": {
        "test": "set \"MONGODB_URI=mongodb://localhost/AVC-room-booking-system-test\" && nodemon --exec \"mocha --timeout 10s -R min \"",
        "test-single": "mocha --timeout 10s ",
        "start": "set NODE_ENV=dev&& node ./server.js",
        "start-dev": "set NODE_ENV=dev&& nodemon ./server.js",
        "start-dev:prod": "set NODE_ENV=dev&& nodemon --require dotenv/config ./server.js dotenv_config_path=./env/.env.prod",
        "start:env-now": "node  --require dotenv/config ./server.js dotenv_config_path=./env/.env.now",
        "start:env-prod": "node  --require dotenv/config ./server.js dotenv_config_path=./env/.env.prod",
        "start:env-preprod": "node  --require dotenv/config ./server.js dotenv_config_path=./env/.env.preprod",
        "test-debug": "set \"MONGODB_URI=mongodb://localhost/AVC-room-booking-system-test\" && mocha --inspect-brk",
        "deploy:now": "now -n avc-room-booking",
        "build": "npm build",
        "docker:build": "docker build --rm -f Dockerfile -t local/avc/backend:latest .",
        "docker:create-network": "docker network create -d bridge --subnet 10.0.75.0/24 --gateway 10.0.75.1 avcnet",
        "test-env": "call env/setAWSCredentials.bat & cmd /C echo %aws_access_key_id% && echo $aws_access_key_id",
        "docker:run": "call env/setAWSCredentials.bat && cmd /C docker run -p 4000:4000 --env aws_s3_avc_access_key_id=%aws_access_key_id% --env aws_s3_avc_secret_access_key=%aws_secret_access_key% --env mongodb_uri=mongodb://host.docker.internal/AVC-room-booking-system local/avc/backend",
        "docker:aws:renew-token": "aws ecr get-login --no-include-email>%TEMP%\\aws-token && cmd /K<%TEMP%\\aws-token & del /Q /F %TEMP%\\aws-token",
        "docker:aws:push": "docker tag local/avc/backend:latest 486699961018.dkr.ecr.eu-west-2.amazonaws.com/avc-backend:latest && docker push 486699961018.dkr.ecr.eu-west-2.amazonaws.com/avc-backend:latest",
        "firebase:serve": "xcopy /S /Y /I src functions\\src && firebase functions:config:get> ./functions/.runtimeconfig.json && firebase serve",
        "firebase:deploy": "xcopy /S /Y /I src functions\\src && firebase deploy"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "aws-sdk": "^2.638.0",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "crypto-js": "^4.0.0",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-jwt": "^5.3.1",
        "fs": "0.0.1-security",
        "fs-extra": "^8.1.0",
        "module-alias": "^2.2.2",
        "moment": "^2.24.0",
        "mongoose": "^5.9.4",
        "multer": "github:emadalam/multer#cf67af6",
        "node-schedule": "^1.3.2",
        "nodemailer": "^6.4.8",
        "request": "^2.88.2",
        "rootpath": "^0.1.2",
        "uuid": "^7.0.3"
    },
    "devDependencies": {
        "app-module-path": "^2.2.0",
        "chai": "^4.2.0",
        "chai-fs": "^2.0.0",
        "chai-http": "^4.3.0",
        "form-data": "^3.0.0",
        "mocha": "^6.2.2",
        "nodemon": "^1.19.4"
    },
    "_moduleAliases": {
        "@src": "src"
    }
}
